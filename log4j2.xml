<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
	<appenders>
		
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd/MM/YYYY HH:mm:ss}  %msg%n" />
		</Console>
		
		<RandomAccessFile name="File" fileName="logs/teapot.log" append="false">
			<PatternLayout pattern="%d{dd/MM/YYYY HH:mm:ss} %-5level %logger{36} - %msg%n" />
		</RandomAccessFile>		
		
	</appenders>
	
	<loggers>
	
		<Logger name="cmabreu.sagitarii.teapot.comm.Client" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.sagitarii.teapot.TaskRequester" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>
		
		<Logger name="cmabreu.sagitarii.teapot.RepositoryManager" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.sagitarii.teapot.Configurator" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>
		
		<Logger name="cmabreu.sagitarii.teapot.XMLParser" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.sagitarii.teapot.comm.Downloader" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.sagitarii.teapot.comm.Uploader" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>
		
		<Logger name="cmabreu.taskmanager.core.ExternalTask" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.taskmanager.core.TaskManager" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>
		
		<Logger name="cmabreu.sagitarii.teapot.Teapot" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<Logger name="cmabreu.sagitarii.teapot.Main" level="debug" additivity="false"> 
			<appender-ref ref="Console"/> 
		</Logger>

		<root level="debug">
			<appender-ref ref="File" />
		</root>
		
	</loggers>
	
	
</configuration>
